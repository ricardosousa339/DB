<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="3dp"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewComodo"
                android:layout_width="91dp"
                android:layout_height="70dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:animateLayoutChanges="false"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewItemPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium" />

                <TextView
                    android:id="@+id/textViewItemSecundario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="TextView" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButtonExpand"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="13"
                android:background="#00000000"
                android:visibility="visible"
                app:srcCompat="@drawable/expand" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutHide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="false"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageViewDetalhe"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/im3" />

            <TextView
                android:id="@+id/textViewExpand1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextViewf" />

            <TextView
                android:id="@+id/textViewExpand2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewExpand3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>